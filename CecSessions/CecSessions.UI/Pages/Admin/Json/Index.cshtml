@page
@model CecSessions.UI.Pages.Admin.Json.IndexModel
@{
      ViewData["Title"] = "Table";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>


<div id="main" class="container-fluid">
    <div class="content maxheigh" style="overflow-y: scroll;">
        <table id="table">
            <thead>
                <tr>
                    <th scope="col">Հ/Հ</th>
                    <th scope="col">Կոդ</th>
                    <th scope="col">Տվյալ</th>
                </tr>
            </thead>

            <tbody>

                @foreach(var item in Model.JsonList)    
                {
                 <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Code</td>
                    <td>@item.Data</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>


        $(document).ready(function () {
            var headerHeight = Math.round($("header").innerHeight());
            var mainHeight = window.innerHeight - headerHeight;

            $("#main").height(mainHeight);
            $(".maxheigh").height(mainHeight - 1);

            $('#table').DataTable();
        });

    </script>
}

