@page
@model CecSessions.UI.Pages.Admin.Roles.CreateModel

@{
    ViewData["Title"] = "Ստեղծել դեր";
}


<form method="post" enctype="multipart/form-data">
    <div class="card card-input">
        <div class="card-body p-0 d-flex align-items-center">
            <i class="cil-user-follow bg-success p-4 px-5 font-2xl mr-3 text-white"></i>
            <div>
                <div class="text-value-sm text-info">Ստեղծել դեր</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="m-3 p-3 row" style="max-width:800px">
                <div class="col-lg-12">
                    <partial name="_ValidationSummary" />
                    @if (Model.Errors.Count > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                @foreach (var error in Model.Errors)
                                {
                                    <li>@error.Code: @error.Description</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                <div class="clear"></div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="text-info" asp-for="Input.RoleName">Անուն</label>
                        <input class="form-control" type="text" asp-for="@Model.Input.RoleName" autofocus>
                        <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-lg-12 border-top margin-top-20" style="padding-top:20px">
                    <button type="submit" class="btn btn-success"><i class="cil-plus"></i> Ստեղծել</button>
                    <a class="btn btn-secondary" asp-page="/Admin/Roles/Index"><i class="cil-x-circle"></i> Չեղարկել</a>
                </div>
            </div>
        </div>
    </div>
</form>