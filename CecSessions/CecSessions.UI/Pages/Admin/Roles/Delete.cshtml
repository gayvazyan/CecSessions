@page "{id}"
@model CecSessions.UI.Pages.Admin.Roles.DeleteModel
@{
    ViewData["Title"] = "Հեռացնել";
}

<form method="post">

   <input type="hidden" asp-for="@Model.Delete.Id" />
   <input type="hidden" asp-for="@Model.Delete.Name" />
   <input type="hidden" asp-for="@Model.Delete.NormalizedName" />
   <input type="hidden" asp-for="@Model.Delete.ConcurrencyStamp" />

    <div class="card card-input">
        <div class="card-body p-0 d-flex align-items-center">
            <i class="cil-trash bg-danger p-4 px-5 font-2xl mr-3 text-white"></i>
            <div>
                <div class="text-value-sm text-info">@ViewData["Title"]</div>
                <div class="text-muted font-weight-bold small"></div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body row">
            <div class="m-3 p-3" style="min-width:600px">
                <partial name="_ValidationSummary" />
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error.Code: @error.Description</li>
                            }
                        </ul>
                    </div>
                }
                <div class="form-group">
                    <table class="table table-responsive-sm table-striped">
                        <tbody>
                            <tr>
                                <td>Id</td>
                                <td>Անուն</td>
                            </tr>
                            <tr>
                                <td>@Model.Delete.Id</td>
                                <td>@Model.Delete.Name</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="card">
                        <div class="card-body p-0 d-flex align-items-center">
                            <i class="cil-warning bg-danger p-4 font-2xl mr-3 text-white"></i>
                            <div>
                                <div class="text-muted font-weight-bold">Տվյալները կհեռացվի ընդմիշտ</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="height:20px"></div>
                <div class="row border-top margin-top-20" style="padding-top:20px">
                    <div class="col-12">
                        <button type="submit" class="btn btn-danger"><i class="cil-trash"></i> Հեռացնել</button>
                        <a class="btn btn-secondary" asp-page="/Admin/Roles/Index"><i class="cil-x-circle"></i> Չեղարկել</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
