@page
@model CecSessions.UI.Pages.Client.Json.CreateModel
@{
      ViewData["Title"] = "Ստեղծել Json";
}

<form method="post" enctype="multipart/form-data">
    <div class="card card-input">
        <div class="card-body p-0 d-flex align-items-center">
            <i class="cil-check bg-success p-4 px-5 font-2xl mr-3 text-white"></i>
            <div>
                <div class="text-value-sm text-info">@ViewData["Title"]</div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body row">
            <div class="m-3 p-3 w-100">
                <div>
                    <partial name="_ValidationSummary" />
                    @if (Model.Errors.Count > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                @foreach (var error in Model.Errors)
                                {
                                    <li>@error.Code: @error.Description</li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                @* ------------------ *@

                <div style="max-width:600px">
                    <div class="row">
                        <div class="col-6 mt-2">
                            <label class="text-info" asp-for="Create.Code">Կոդ</label>
                            <input class="form-control" type="text" asp-for="Create.Code">
                            <span asp-validation-for="Create.Code" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row margin-top-20">
                        <div class="col-6 mt-2">
                            <label class="text-info" asp-for="Create.Data">Տվյալ</label>
                            <input class="form-control" type="text" asp-for="Create.Data">
                            <span asp-validation-for="Create.Data" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @* -------------------- *@

                <div style="height:20px"></div>
                <div class="row border-top margin-top-20" style="padding-top:20px">
                    <div class="col-12">
                        <button type="submit" class="btn btn-success"><i class="cil-plus"></i> Ստեղծել</button>
                        <a class="btn btn-secondary" asp-page="/Client/Json/Index"><i class="cil-x-circle"></i> Չեղարկել</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
